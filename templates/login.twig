{% extends 'app.twig' %}

{% block content %}
<div class="row">
	<div class="col-md-6 col-md-offset-3">
		<div class="panel panel-default">
			<div class="panel-heading">HAMR Login</div>
			<div class="panel-body">
				<form method="post" name="userForm" id="userForm" action="">	
					<div class="form-group">
						<label for="User Name">User Name</label>
						<input type="text" class="form-control" id="txtName" name="txtName" required>
					</div>
					<div class="form-group">
						<label for="Password">Password</label>
						<input type="password" class="form-control" id="txtPwd" name="txtPwd" required>
					</div>
					<span class={{ code }}>
						{{ errors }}
					</span><br>
					<div class="form-group">
						<button type="submit" id="login" class="btn btn-default">Login!</button>
					</div>
				</form>
			</div>
		</div>
	</div>
</div>
{% endblock %}